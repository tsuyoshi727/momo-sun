# This workflow will do a clean install of node dependencies, build the source code and run tests across different versions of node
# For more information see: https://help.github.com/actions/language-and-framework-guides/using-nodejs-with-github-actions

name: 腾讯新闻

on:
  workflow_dispatch:
  schedule:
     - cron: '*/6 * * * *'
  watch:
    types: started
jobs:
  build:
    runs-on: ubuntu-latest
    if: github.event.repository.owner.id == github.event.sender.id
    env:
     TXNEWS_SIGN_28: ${{ secrets.TXNEWS_SIGN_28 }}
     TXNEWS_COOKIE_28: ${{ secrets.TXNEWS_COOKIE_28 }}
     TXNEWS_VIDEO_28: ${{ secrets.TXNEWS_VIDEO_28 }}
     TXNEWS_SIGN_WX: ${{ secrets.TXNEWS_SIGN_WX }}
     TXNEWS_COOKIE_WX: ${{ secrets.TXNEWS_COOKIE_WX }}
     TXNEWS_VIDEO_WX: ${{ secrets.TXNEWS_VIDEO_WX }}
     TXNEWS_SIGN_EXILE: ${{ secrets.TXNEWS_SIGN_EXILE }}
     TXNEWS_COOKIE_EXILE: ${{ secrets.TXNEWS_COOKIE_EXILE }}
     TXNEWS_VIDEO_EXILE: ${{ secrets.TXNEWS_VIDEO_EXILE }}
     PUSH_KEY: ${{ secrets.PUSH_KEY }}
     BARK_PUSH: ${{ secrets.BARK_PUSH }}
     TXNEWS_NOTIFY_CONTROL: ${{ secrets.TXNEWS_NOTIFY_CONTROL }}
     TG_BOT_TOKEN: ${{ secrets.TG_BOT_TOKEN }}
     TG_USER_ID: ${{ secrets.TG_USER_ID }}
     BARK_SOUND: ${{ secrets.BARK_SOUND }}
    steps:
      - uses: actions/checkout@v1
      - name: Use Node.js 12.x
        uses: actions/setup-node@v1
        with:
          node-version: 12.x
      - name: npm install
        run: |
          npm install
          
      - name: '运行 【腾讯28】'
        if: 
            env.TXNEWS_SIGN_28
            env.TXNEWS_COOKIE_28
            env.TXNEWS_VIDEO_28
        run: |
          node Task/txnews.js
        env:
          TXNEWS_SIGN: ${{ secrets.TXNEWS_SIGN_28 }}
          TXNEWS_COOKIE: ${{ secrets.TXNEWS_COOKIE_28 }}
          TXNEWS_VIDEO: ${{ secrets.TXNEWS_VIDEO_28 }}

      - name: '运行 【腾讯wx】'
        if: 
            env.TXNEWS_SIGN_wx
            env.TXNEWS_COOKIE_wx
            env.TXNEWS_VIDEO_wx
        run: |
          node Task/txnews.js
        env:
          TXNEWS_SIGN: ${{ secrets.TXNEWS_SIGN_wx }}
          TXNEWS_COOKIE: ${{ secrets.TXNEWS_COOKIE_wx }}
          TXNEWS_VIDEO: ${{ secrets.TXNEWS_VIDEO_wx }}
          
         - name: '运行 【腾讯exile】'
        if: 
            env.TXNEWS_SIGN_exile
            env.TXNEWS_COOKIE_exile
            env.TXNEWS_VIDEO_exile
        run: |
          node Task/txnews.js
        env:
          TXNEWS_SIGN: ${{ secrets.TXNEWS_SIGN_exile }}
          TXNEWS_COOKIE: ${{ secrets.TXNEWS_COOKIE_exile }}
          TXNEWS_VIDEO: ${{ secrets.TXNEWS_VIDEO_exile }}
